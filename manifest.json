{
    "manifest_version": 2,
    "name": "SaveTabs",
    "version": "1.0",

    "description": "A Chrome extension for saving open tabs to disk.",
    "icons": {
        "16": "images/logo16.png",
        "32": "images/logo32.png",
        "48": "images/logo48.png",
        "128": "images/logo128.png"
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/logo16.png",
            "32": "images/logo32.png",
            "48": "images/logo48.png",
            "128": "images/logo128.png"
        }
    },

    "permissions": [
        "downloads",
        "tabs"
    ]
}
